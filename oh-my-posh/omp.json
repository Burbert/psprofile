{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title": true,
    "console_title_style": "template",
    "console_title_template": "{{if .Root}}(Admin) {{end}}{{.Folder}}",
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "root",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#242424",
            "background": "#f1184c"
          },
          {
            "type": "path",
            "style": "powerline",
            "Full": true,
            "foreground": "#33DD2D",
            "background": "#242424",
            "properties": {
              "prefix": "\uE5FF ",
              "style": "folder",
              "folder_separator_icon": "/"
            }
          },
          {
            "type": "kubectl",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#000000",
            "background": "#3483eb",
            "properties": {
              "prefix": " \uFD31 ",
              "template": "{{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}}"
            }
          },
          {
            "type": "terraform",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#000000",
            "background": "#a000eb"
          },
          {
            "type": "git",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#3A86FF",
            "background": "#242424",
            "properties": {
              "display_status": true,
              "display_stash_count": true,
              "display_upstream_icon": true,
              "prefix": " \uf7a1 "
            }
          },
          {
            "type": "python",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#100e23",
            "background": "#906cff",
            "properties": {
              "prefix": " \uE235 "
            }
          },
          {
            "type": "dotnet",
            "style": "powerline",
            "powerline_symbol": "î‚°",
            "foreground": "#000000",
            "background": "#00ffff",
            "properties": {
              "prefix": " \uE77F "
            }
          },
          {
            "type": "exit",
            "style": "powerline",
            "powerline_symbol": "\uE0B4",
            "foreground": "#242424",
            "background": "#33DD2D",
            "properties": {
              "display_exit_code": false,
              "color_background": true,
              "error_color": "#f1184c",
              "prefix": " \ufc8d"
            }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "type": "text",
            "style": "plain",
            "foreground": "#18f13c",
            "properties": {
              "prefix": "",
              "text": "\u279C"
            }
          }
        ]
      }
    ]
  }